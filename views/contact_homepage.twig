<html>
<head>
  <title>Address Book</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
</head>
<body>
  <div class='container'>
    <h1>Address Book</h1>
    {% if contacts is not empty %}
      <h2>Contacts</h2>
        {% for contact in contacts %}
          <ul>
            <li>{{ contact.getName }}</li>
            <li>{{ contact.getNumber }}</li>
            <li>{{ contact.getAddress }}</li>
          </ul>
        {% endfor %}
    {% endif %}

    <form action='/create_contact' method='post'>
      <p>
        <label for='name'>Name: </label>
        <input id='name' name='name' type='text'>
      </p>

      <p>
        <label for='number'>Phone Number: </label>
        <input id='number' name='number' type='number'>
      </p>

      <p>
        <label for='address'>Address: </label>
        <input id='address' name='address' type='text'>
      </p>

      <p><button type='submit' class='btn-success'>Add Contact</button></p>
    </form>
    <form action='/delete_contacts' method='post'>
      <button type='submit'>Delete All Contacts</button>
    </form>

  </div>
</body>
</html>
